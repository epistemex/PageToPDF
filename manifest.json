{
  "manifest_version": 2,
  "name": "Page To PDF",
  "short_name": "Page2PDF",
  "description": "Save current tab as PDF file.",
  "version": "0.4.0",

  "developer": {
    "name": "K3N",
    "url": "https://epistemex.com/"
  },

  "applications": {
    "gecko": {
      "id": "page2pdf@epistemex.com",
      "strict_min_version": "56.0"
    }
  },

  "default_locale": "en",

  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ],

  "background": {
    "scripts": ["bg.js"]
  },

  "browser_action": {
    "default_icon": {
      "48": "gfx/pdf_48.png",
      "96": "gfx/pdf_96.png"
    },
    "default_title": "__MSG_title__",
    "default_popup": "options-__MSG_lang__.html",
    "browser_style": true
  },

  "icons": {
    "48": "gfx/pdf_48.png",
    "96": "gfx/pdf_96.png"
  }
}